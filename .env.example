# FastDeal Backend - Configuration Environment Variables
# Copier ce fichier vers .env et remplir avec vos vraies valeurs

# ===============================================
# CONFIGURATION SERVEUR
# ===============================================
PORT=5000
NODE_ENV=development

# ===============================================
# BASE DE DONNÉES
# ===============================================
# MongoDB local ou Atlas
MONGODB_URI=mongodb://localhost:27017/fastdeal
# Exemple MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/fastdeal

# ===============================================
# AUTHENTIFICATION JWT
# ===============================================
# Générer une clé sécurisée de 32+ caractères
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters_long
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===============================================
# CLOUDINARY (Upload d'images)
# ===============================================
# Obtenir sur https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===============================================
# CONFIGURATION EMAIL (Notifications)
# ===============================================
EMAIL_FROM=noreply@fastdeal.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password

# ===============================================
# STRIPE (Cartes bancaires internationales)
# ===============================================
# Obtenir sur https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# ===============================================
# PAYPAL (Portefeuille électronique)
# ===============================================
# Obtenir sur https://developer.paypal.com
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id_here
PAYPAL_MODE=sandbox
# Changer en "live" pour la production

# ===============================================
# ORANGE MONEY (Mobile Money Afrique de l'Ouest)
# ===============================================
# Obtenir sur https://developer.orange.com
ORANGE_MONEY_BASE_URL=https://api.orange.com/orange-money-webpay/dev/v1
ORANGE_MONEY_CLIENT_ID=your_orange_money_client_id_here
ORANGE_MONEY_CLIENT_SECRET=your_orange_money_client_secret_here
ORANGE_MONEY_MERCHANT_KEY=your_orange_money_merchant_key_here

# ===============================================
# MTN MONEY (Mobile Money Afrique de l'Ouest)
# ===============================================
# Obtenir sur https://momodeveloper.mtn.com
MTN_MONEY_BASE_URL=https://sandbox.momodeveloper.mtn.com
MTN_MONEY_USER_ID=your_mtn_user_id_here
MTN_MONEY_API_KEY=your_mtn_api_key_here
MTN_MONEY_SUBSCRIPTION_KEY=your_mtn_subscription_key_here

# ===============================================
# CONFIGURATION FRONTEND
# ===============================================
FRONTEND_URL=http://localhost:3000
ADMIN_FRONTEND_URL=http://localhost:3001

# ===============================================
# SÉCURITÉ
# ===============================================
# Nombre de rounds pour bcrypt (10-12 recommandé)
BCRYPT_ROUNDS=12

# Protection contre les attaques par force brute
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=30

# Rate limiting (requêtes par fenêtre de temps)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# ===============================================
# CONFIGURATION UPLOAD
# ===============================================
# Taille maximum des fichiers (en bytes)
MAX_FILE_SIZE=10485760
# Types de fichiers autorisés
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ===============================================
# CONFIGURATION DÉVELOPPEMENT (Optionnel)
# ===============================================
# Activer les logs détaillés
DEBUG=true
LOG_LEVEL=debug

# Désactiver certaines vérifications en dev
SKIP_EMAIL_VERIFICATION=false
ALLOW_HTTP_WEBHOOKS=true

# ===============================================
# NOTES IMPORTANTES
# ===============================================

# 1. SÉCURITÉ
# - Ne jamais commiter ce fichier avec de vraies valeurs
# - Utiliser des mots de passe forts et uniques
# - Régénérer les clés secrètes pour la production

# 2. ORANGE MONEY
# - Créer un compte développeur sur developer.orange.com
# - Souscrire à l'API Orange Money WebPay
# - Pays supportés: Burkina Faso, Cameroun, Côte d'Ivoire, Mali, Niger, Sénégal

# 3. MTN MONEY
# - Créer un compte développeur sur momodeveloper.mtn.com
# - S'abonner à l'API Collection
# - Pays supportés: Bénin, Cameroun, Congo-Brazzaville, Côte d'Ivoire, Ghana, Guinée, Liberia, Rwanda, Ouganda, Zambie

# 4. WEBHOOKS DE PRODUCTION
# - Stripe: https://yourapi.com/api/payments/stripe/webhook
# - PayPal: https://yourapi.com/api/payments/paypal/webhook
# - S'assurer que HTTPS est activé en production

# 5. MONGODB ATLAS
# - Créer un cluster gratuit sur https://cloud.mongodb.com
# - Ajouter l'IP du serveur dans les accès réseau
# - Créer un utilisateur de base de données

# 6. CLOUDINARY
# - Créer un compte gratuit sur https://cloudinary.com
# - Configurer les presets de transformation d'images
# - Limiter l'accès par domaine en production